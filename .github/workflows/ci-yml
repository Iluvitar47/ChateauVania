name: CI Pipeline

on:
  push:
    branches:
      - dev

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Étape pour vérifier le code
      - name: Checkout code
        uses: actions/checkout@v2

      # Étape pour configurer JDK 11
      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: '11'

      # Étape pour accorder les permissions d'exécution au script de test
      - name: Grant execute permission for the test script
        run: chmod +x run_tests.sh

      # Étape pour exécuter les tests
      - name: Run tests
        run: ./run_tests.sh